{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/janiceivana/3179/main/art_pediatric_coverage_by_country_clean.csv"
  },
  "title": {
    "text": "Correlation Living with HIV and Received ART",
  "fontSize": 16},
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Received_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1,
        "name": "Minimum % Received: "
      }
    },
    {
      "name": "Received_Below",
      "value": 100,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100,
        "step": 1,
        "name": "Maximum % Received: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum['Reported number of children receiving ART'] > 0"
    },
    {
      "filter": "datum['Estimated number of children needing ART based on WHO methods_median'] > 0"
    },
    {
      "filter": "datum['Estimated ART coverage among children (%)_median'] < Received_Below"
    },  
    {
      "filter": "datum['Estimated ART coverage among children (%)_median'] > Received_Above"
    },
    {
      "filter": "Continent_selection == null || datum['WHO Region'] == Continent_selection"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "y": {
          "field": "Reported number of children receiving ART",
          "type": "quantitative",
          "aggregate":"sum"
        },
        "x": {
          "field": "Estimated number of children needing ART based on WHO methods_median",
          "type": "quantitative",
          "aggregate":"sum",
          "title": "Estimated number of children needing ART"
        },
        "size": {
          "field": "Estimated ART coverage among children (%)_median",
          "type": "quantitative",
          "aggregate":"sum",
          "title": "Estimated ART coverage among children (%)",
          "legend": {
            "orient": "bottom",
            "direction": "vertical"
          }
        },
        "color": {
          "field": "WHO Region",
          "type": "nominal",
          "legend": {
            "orient": "bottom",
            "direction": "vertical"
          },
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "pink",
              "purple",
              "blue",
              "lightgreen",
              "orange",
              "darkgreen"
            ]
          }
        },
        "opacity":{"value":0.5},
        "tooltip": [
          {
            "field": "Reported number of children receiving ART",
            "type": "quantitative"
          },
          {
            "field": "Estimated number of children needing ART based on WHO methods_median",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "WHO Region",
            "type": "nominal"
          },
          {
            "field": "Country",
            "type": "nominal"
          },
          {
            "field": "Estimated ART coverage among children (%)_median",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "x": {
          "type": "quantitative",
          "field": "Estimated number of children needing ART based on WHO methods_median",
          "aggregate":"sum"
        },
        "y": {
          "type": "quantitative",
          "field": "Reported number of children receiving ART",
          "aggregate":"sum"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Madagascar' || datum['Country'] == 'El Salvador' || datum['Country'] == 'Djibouti' || datum['Country'] == 'Republic of Moldova' || datum['Country'] == 'Indonesia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Reported number of children receiving ART",
            "type": "quantitative"
          },
          {
            "field": "Estimated number of children needing ART based on WHO methods_median",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "WHO Region",
            "type": "nominal"
          },
          {
            "field": "Country",
            "type": "nominal"
          },
          {
            "field": "Estimated ART coverage among children (%)_median",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    }
  ]
}