{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/janiceivana/3179/main/art_coverage_by_country_clean.csv"
  },
  "vconcat": [
    {
      "title": {
        "text": "Density of % ART Received for People with HIV",
        "fontSize": 16,
        "font": "Lora"
      },
      "width": 400,
      "height": 250,
      "mark": {
        "type": "bar",
        "tooltip": true,
        "color": "#ad494a"
      },
      "encoding": {
        "x": {
          "field": "Estimated ART coverage among people living with HIV (%)_median",
          "title": "% ART Received for People with HIV",
          "bin": {
            "maxbins": 30,
            "extent": {
              "param": "brush"
            }
          }
        },
        "y": {
          "aggregate": "count"
        }
      }
    },
    {
      "title": {
        "text": "Use this as filter above histogram for detail",
        "fontSize": 16,
        "font": "Lora"
      },
      "width": 400,
      "height": 250,
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "encodings": [
              "x"
            ]
          }
        }
      ],
      "mark": {
        "type": "bar",
        "tooltip": true,
        "color": "#ad494a"
      },
      "encoding": {
        "x": {
          "field": "Estimated ART coverage among people living with HIV (%)_median",
          "title": "% ART Received for People with HIV",
          "bin": {
            "maxbins": 10
          }
        },
        "y": {
          "aggregate": "count"
        }
      }
    }
  ]
}