{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/art_coverage_by_country_clean.csv"},
  "width":"container","height":500,
  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        }
      ],
      "mark": {"type": "bar", "color": "#eee", "tooltip": true},
      "encoding": {
        "x": {"bin": true, "field": "Estimated ART coverage among people living with HIV (%)_median"},
        "opacity": {
          "condition": {"test": {"param": "hover", "empty": false}, "value": 0.5},
          "value": 0
        },
        "detail": [{"aggregate": "count"}]
      }
    },
    {
      "mark": "bar",
      "encoding": {
        "x": {"bin": true, "field": "Estimated ART coverage among people living with HIV (%)_median"},
        "y": {"aggregate": "count"}
      }
    }
  ]
}
