{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/janiceivana/3179/main/prevention_of_mother_to_child_transmission_by_country_clean.csv"
  },
  "width":"container","height":500,
  "title": {
    "text": "Number of Pregnant Women vs Received ART",
  "fontSize": 16,
  "font": "Lora"},
  "encoding": {
    "x": {
      "field": "WHO Region","type": "nominal"
  }
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "WHO Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum['WHO Region'] == Continent_selection"
    }
  ],
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "Received Antiretrovirals",
          "type": "quantitative",
          "aggregate": "sum",
          "title":"Number of Pregnant Women"
        },
        "tooltip": [
          {
            "field": "Received Antiretrovirals",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "WHO Region",
            "type": "nominal"
          },
          {
            "field": "Country",
            "type": "nominal"
          }
        ]
      },
      "mark": {
        "type": "bar",
        "size": 20,
        "xOffset": 15,
        "color": "#e7969c",
        "tooltip": true
      }
    },
    {
      "encoding": {
        "y": {
          "field": "Needing antiretrovirals_median",
          "type": "quantitative",
          "aggregate": "sum",
          "title":"Number of Pregnant Women"
        },
        "tooltip": [
          {
            "field": "Needing antiretrovirals_median",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "WHO Region",
            "type": "nominal"
          },
          {
            "field": "Country",
            "type": "nominal"
          }
        ]
      },
      "mark": {
        "type": "bar",
        "xOffset": -15,
        "size": 20,
        "color": "#d6616b",
        "tooltip":true
      }
    }
  ]
}


