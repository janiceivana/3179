{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/art_coverage_by_country_clean.csv"},
  "params": [{
    "name": "grid",
    "select": "interval",
    "bind": "scales"
  },{
    "name": "search_input",
    "bind": {
      "input": "search",
      "placeholder": "WHO Region",
      "name": "Search"
    },
    "value": ""
  }],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "tooltip": true
      },
      "encoding": {
        "y": {
          "field": "Reported number of people receiving ART",
          "type": "quantitative",
          "scale": {"domain": [0, 5000000]}
        },
        "x": {
          "field": "Estimated number of people living with HIV_median",
          "type": "quantitative",
          "scale": {"domain": [0, 8000000]}
        },
        "size": {"field": "Estimated ART coverage among people living with HIV (%)_median", "type": "quantitative"},
        "color":{"field": "Country", "type":"nominal"},
        "opacity": {
          "condition": {
            "test": "test(regexp(search_input,'i'),datum['WHO Region'])",
            "value": 1
          },
          "value": 0.1
        }
      }
    }
  ]
}
