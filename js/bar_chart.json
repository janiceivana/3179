{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":"container", "height":500,
    "data": {
        "url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_deaths_by_country_clean.csv"
    },
    "mark": {
        "type": "bar",
        "filled": true,
        "tooltip":true
      },
    "encoding": {
        "y": {
            "field": "Count_median",
            "type": "quantitative",
            "aggregate":"sum",
            "title": "Count"
        },
        "x": {
            "field": "WHO Region",
            "type": "nominal",
            "title": "WHO Region",
            "sort": { "encoding": "y", "order":"descending"}
        },
        "color": {"field":"WHO Region", "scale":{"range":["red","purple","blue","lightgreen","orange","darkgreen"]}
    }
    },
    "config": {
        "axis": {
            "titleColor":"purple",
            "labelFont": "sans-serif",
            "labelFontSize": 15,
            "titleFontSize": 15
        }
    }
}
