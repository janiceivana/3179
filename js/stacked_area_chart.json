{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_deaths_by_country_clean.csv"},
  
  "params": [{
    "name": "Continent",
    "select": {"type": "point", "fields": ["WHO Region"]},
    "bind": "legend"
  }],
  "config": {
    "legend": {"orient": "left"}
  },
  "hconcat":[
    {
      "width":350, "height": 500,
      "mark": {
        "type": "bar",
        "filled": true,
        "tooltip":true
      },
    "encoding": {
        "y": {
            "field": "Count_median",
            "type": "quantitative",
            "aggregate":"sum",
            "title":"Number of Death caused by HIV"
        },
        "x": {
            "field": "WHO Region",
            "type": "nominal",
            "title": "WHO Region",
            "sort": { "encoding": "y", "order":"descending"}
        },
        "color": {"field":"WHO Region", "scale":{"scheme":"purplered"}},
        "opacity": {
          "condition": {"param": "Continent", "value": 1},
          "value": 0.2
        }
    }
    },
    {
      
      "width": 350, "height": 500,
      "mark": {"type": "area","stroke":"black"},
      "encoding": {
        "x": {
          "field": "Year"
        },
        "y": {
          "aggregate": "sum", 
          "field": "Count_median",
          "sort":"color",
          "title":"Number of Death caused by HIV"
        },
        "color": {
          "field":"WHO Region",
          "scale": {"scheme": "purplered"}   },
        
        "opacity": {
          "condition": {"param": "Continent", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year"},
          {"field": "WHO Region"},
          {"aggregate":"sum","field": "Count_median", "type": "quantitative"}
        ]
      }
    
    }
  ]
  
}

