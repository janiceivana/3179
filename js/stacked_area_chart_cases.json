{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_people_living_with_hiv_by_country_clean.csv"},
  
  "params": [
    {
      "name": "Continent",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent == null || datum['WHO Region'] == Continent"
    }
  ],
  "hconcat":[
    {
      "title": {
        "text": "Trends Number of People Living with HIV",
      "fontSize": 16},
      "width": 400, "height": 500,
      "mark": {"type": "area","stroke":"black"},
      "encoding": {
        "x": {
          "field": "Year"
        },
        "y": {
          "aggregate": "sum", 
          "field": "Count_median",
          "sort":"color",
          "title":"Number of People Living with HIV"
        },
        "color": {
        "field": "WHO Region",
        "type": "nominal",
        "legend": null,
        "scale": {
          "domain": [
            "Africa",
            "Americas",
            "Eastern Mediterranean",
            "Europe",
            "South-East Asia",
            "Western Pacific"
          ],
          "range": [
            "pink",
            "purple",
            "blue",
            "lightgreen",
            "orange",
            "darkgreen"
          ]
        }
        },
        "tooltip": [
          {"field": "Year"},
          {"field": "WHO Region"},
          {"aggregate":"sum","field": "Count_median", "type": "quantitative"}
        ]
      }
    
    },
    {
      "width":400, "height":500,
      "title": {
        "text": "Number of People Living with HIV",
      "fontSize": 16},
      "mark": {
        "type": "boxplot",
        "extent": "min-max"
      },
      "encoding": {
        "x": {"field": "WHO Region", "type": "nominal"},
        "color": {
          "field": "WHO Region",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "pink",
              "purple",
              "blue",
              "lightgreen",
              "orange",
              "darkgreen"
            ]
          }
          },        "y": {
          "field": "Count_median",
          "type": "quantitative",
          "scale": {"zero": false},
          "title":"Number of People Living with HIV"
        }
      }
    }
  ]
  
}

