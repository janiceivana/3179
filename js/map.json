{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "HIV Worldwide Death Cases (2000, 2010, & 2018)",
    "width": "container",
    "height": 500,
    "params": [
    {
        "name": "zoom_level",
        "value": 200,
        "bind": {
          "input": "range",
          "min": 100,
          "max": 500,
          "step": 1,
          "name": "Zoom: "
        }
    },
    {
        "name": "center_to",
        "value": [0,0],
        "bind": {
          "input": "select",
          "options": [
            [0,0],
            [100.6197, 34.0479],
            [34.5085, -8.7832],
            [15.2551, 54.5260],
            [-55.4915, -8.7832],
            [-105.2551, 54.5260],
            [140.0188, -22.7359],
            [0,-90]
          ],
          "labels": ["World","Asia","Africa", "Europe", "South America", "North America", "Oceania","Antartica"],
          "name": "Map Centre: "
        }
    }
    ],
    
    "projection": {
      "type": "equalEarth",
      "center": {"expr": "center_to"},
      "scale": {"expr": "zoom_level"}
    },
    "data": {
      "url": "https://raw.githubusercontent.com/janiceivana/3179/main/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      }
    },
    "layer":[
      {
        "params": [
            {
              "name": "highlight",
              "select": {"type": "point", "on": "mouseover"}
            }
        ],
        "transform": [
            {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
            }
        ],
        "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
        },
        "encoding": {
            "strokeWidth": {
                "condition": [
                  {
                    "param": "highlight",
                    "empty": false,
                    "value": 2
                  }
                ],
                "value": 1
            },
            "tooltip": {
                "field": "note"
            }
        }
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/janiceivana/3179/main/ne_50m_ocean.json",
            "format": {
                "type": "topojson",
                "feature": "ne_50m_ocean"
            }
        },
        "mark": {
            "type": "geoshape",
            "fill": "skyblue"
        }
      },
      {
        "data": {
            "url": "https://raw.githubusercontent.com/janiceivana/3179/main/WorldMapWithGraticules.topojson",
            "format": {
                "type": "topojson",
                "feature": "ne_110m_graticules_30"
            }
        },
        "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "lightgray"
        }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_deaths_by_country_clean.csv"
            },
            "key": "Country",
            "fields": ["Count_median"]
          }
        },
        {"calculate": "datum.Count_median + 0.1", "as": "Death Cases"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke":"black"
      },
      
      "encoding": {
        "color": {
          "field": "Death Cases",
          "type": "quantitative",
          "scale": {"type": "log","range": [
            "#fdbe85",
            "#F48C06",
            "#D00000",
            "#9D0208",
            "#6A040F"
        ]}
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 2
            }
          ],
          "value": 1
         },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Count_median",
            "type": "quantitative"
          }
        ]
      }
    }
    ],
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
}
  