{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_cases_adults_15_to_49_by_country_clean.csv"},
  
  "params": [
    {
      "name": "Continent",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "WHO Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent == null || datum['WHO Region'] == Continent"
    }
  ],
  "hconcat":[
    {
      "title": {
        "text": "Trends Average of Death Cases",
      "fontSize": 16,
      "font": "Lora"},
      "width":420, "height": 500,
      "mark": {"type": "area","stroke":"black"},
      "encoding": {
        "x": {
          "field": "Year",
          "timeUnit":"year",
        "axis":{"title":"Year"}  },
        "y": {
          "aggregate": "average", 
          "field": "Count_median",
          "sort":"color",
          "title":"Average of Adult Cases with HIV (%)"
        },
        "color": {
          "field": "WHO Region",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "#fb9a99",
              "#fdbf6f",
              "#cab2d6",
              "#80b1d3",
              "#ffed6f",
              "darkgreen"
            ]
          }
          },
        "tooltip": [
          {"field": "Year","timeUnit":"year"},
          {"field": "WHO Region"},
          {"aggregate":"average","field": "Count_median", "type": "quantitative"}
        ]
      }
    
    },
    {
      "title": {
        "text": "Average of Death Cases for Each Continent",
      "fontSize": 16,
      "font": "Lora"},
      "width":450, "height":500,
      "mark": {
        "type": "boxplot",
        "extent": "min-max"
      },
      "encoding": {
        "x": {"field": "WHO Region", "type": "nominal"},
        "color": {
          "field": "WHO Region",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "#fb9a99",
              "#fdbf6f",
              "#cab2d6",
              "#80b1d3",
              "#ffed6f",
              "darkgreen"
            ]
          }
          },
          "y": {
          "field": "Count_median",
          "type": "quantitative",
          "scale": {"zero": false},
          "title":"Average of Adult Cases with HIV (%)"
        }
      }
    }
  ]
  
}

