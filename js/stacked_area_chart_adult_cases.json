{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_cases_adults_15_to_49_by_country_clean.csv"},
  
  "params": [
    {
      "name": "Continent",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "WHO Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent == null || datum['WHO Region'] == Continent"
    }
  ],
  "hconcat":[
    {
      "title": {
        "text": "Trends Average of Death Cases",
      "fontSize": 16,
      "font": "Lora"},
      "width":420, "height": 500,
      "mark": {"type": "area"},
      "encoding": {
        "x": {
          "field": "Year",
          "timeUnit":"year",
          "scale":{"domain":[2000,2018]},
          "axis":{"title":"Year","tickCount":5,"grid": false, "ticks": false}},
        "y": {
          "aggregate": "average", 
          "field": "Count_median",
          "sort":"color",
          "title":"Average of Adult Cases (%)", "axis": {"grid": false, "ticks": false}
        },
        "color": {
          "field": "WHO Region",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Eastern Mediterranean",
              "Europe",
              "South-East Asia",
              "Western Pacific"
            ],
            "range": [
              "#fb9a99",
              "#fdbf6f",
              "#cab2d6",
              "#80b1d3",
              "#ffed6f",
              "darkgreen"
            ]
          }
          },
        "tooltip": [
          {"field": "Year","timeUnit":"year","title":"Year"},
          {"field": "WHO Region"},
          {"aggregate":"average","field": "Count_median", "type": "quantitative","format": ".2f","title":"Average of Adult Cases (%)"}
        ]
      }
    
    },
    {
      "title": {
        "text": "Average of Death Cases for Each Continent",
      "fontSize": 16,
      "font": "Lora"},
      "width":450, "height":500,
      "layer": [
        {"mark": {
          "type": "boxplot",
          "extent": "min-max",
          "size": 30
        },
        "encoding": {
          "x": {"field": "WHO Region", "type": "nominal"},
          "color": {
            "field": "WHO Region",
            "type": "nominal",
            "legend": null,
            "scale": {
              "domain": [
                "Africa",
                "Americas",
                "Eastern Mediterranean",
                "Europe",
                "South-East Asia",
                "Western Pacific"
              ],
              "range": [
                "#fb9a99",
                "#fdbf6f",
                "#cab2d6",
                "#80b1d3",
                "#ffed6f",
                "darkgreen"
              ]
            }
            },
            "y": {
            "field": "Count_median",
            "type": "quantitative",
            "title":"Average Adult Cases",
            "scale": {"type": "log"},
            "axis": {"grid": false, "ticks": false}
          }
        }},
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "fontSize": 14,
            "fontWeight": "bold",
            "dy": -5
          },
          "encoding": {
            "x": {
              "field": "WHO Region",
              "type": "nominal"
            },
            "y": {
              "field": "Count_median",
              "type": "quantitative",
              "scale": {
                "zero": false
              },
              "aggregate":"max"
            },
            "color": {
              "field": "WHO Region",
              "scale": {
                "range": [
                  "#fb9a99",
                  "#fdbf6f",
                  "#cab2d6",
                  "#80b1d3",
                  "#ffed6f",
                  "darkgreen"
                ]
              }
            },
            "text": {
              "field": "Count_median",
              "type": "quantitative",
              "format": ",",
              "aggregate":"max"
            }
          }
        }
      ]
    },
    {
      "title": {
        "text": "Distribution Average of Death Cases",
      "fontSize": 16,
      "font": "Lora"},
      "width":450, "height":500,

    "encoding": {
        "y": {
            "field": "Count_median",
            "type": "quantitative",
            "aggregate":"average",
            "axis": {"grid": false, "ticks": false},
            "title":"Average of Adult Cases with HIV (%)"
        },
        "x": {
            "field": "WHO Region",
            "type": "nominal",
            "title": "WHO Region",
            "sort": { "encoding": "y", "order":"descending"}
        }
},
"layer": [
  {
  
    "mark": {
      "type": "bar",
      "filled": true,
      "tooltip":true
    },
    "encoding":{"color": {"field":"WHO Region","scale":{            "range": [
          "#fb9a99",
          "#fdbf6f",
          "#cab2d6",
          "#80b1d3",
          "#ffed6f",
          "darkgreen"
        ]}},
       
        "tooltip":[
          {
            "field": "WHO Region",
            "type": "nominal"
          },
          {
            "type": "quantitative",
            "aggregate": "average",
            "field": "Count_median",
            "title": "Average of Adult Cases (%)",
            "format":".2f"
          }
        ]
      }
  },
  {
  
    "mark": {
      "type": "text",
      "align": "center",
      "baseline": "middle",
      "fontSize":14,
      "fontWeight":"bold",
      "dy": -5
    },
    "encoding": {"color": {"field":"WHO Region","scale":{            "range": [
      "#fb9a99",
      "#fdbf6f",
      "#cab2d6",
      "#80b1d3",
      "#ffed6f",
      "darkgreen"
    ]}},
  
      "text": {"field": "Count_median",
      "type": "quantitative",
      "aggregate":"average",
      "format":".2f"}
      }
    }
  
]
    }
  ]
  
}

