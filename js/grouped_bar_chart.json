{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/janiceivana/3179/main/art_coverage_by_country_clean.csv"
  },
  "width":"container","height":500,
  "title": {
    "text": "People with HIV vs Received ART",
  "fontSize": 16,
  "font": "Lora"},
  "encoding": {
    "x": {
      "field": "WHO Region","type": "nominal"
  }
  },  
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Eastern Mediterranean",
          "Europe",
          "South-East Asia",
          "Western Pacific"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum['WHO Region'] == Continent_selection"
    }
  ],
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "Reported number of people receiving ART",
          "type": "quantitative"
        }
      },
      "mark": {
        "type": "bar",
        "size": 20,
        "xOffset": 15,
        "color": "orange",
        "tooltip": true
      }
    },
    {
      "encoding": {
        "y": {
          "field": "Estimated number of people living with HIV_median",
          "type": "quantitative",
          "aggregate": "sum",
          "title":"Number of People"
        }
      },
      "mark": {
        "type": "bar",
        "xOffset": -15,
        "size": 20,
        "color": "pink",
        "tooltip":true
      }
    }
  ]
}


