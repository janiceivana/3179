
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/janiceivana/3179/main/no_of_deaths_by_country_clean.csv"},
    "width":"container","height":500,
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "Count_median",
            "type": "quantitative",
            "title": "Count",
            "aggregate": "sum"
        },
        "color": {
        "condition": {
          "param": "hover",
          "field":"WHO Region",
          "type":"nominal",
          "legend": null,
          "scale":{"range":["pink","purple","blue","lightgreen","orange","darkgreen"]}
        },
        "value": "grey"
      },
      "opacity": {
        "condition": {
          "param": "hover",
          "value": 1
        },
        "value": 0.2
      }
    },
    "layer": [{
      "description": "transparent layer to make it easier to trigger selection",
      "params": [{
        "name": "hover",
        "value": [{"WHO Region": "Africa"}],
        "select": {
          "type": "point",
          "fields": ["WHO Region"],
          "on": "mouseover"
        }
      }],
      "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
    }, {
      "mark": "line"
    }, {
        "encoding": {
            "x": {"field": "Year"}, 
            "y": {"field": "Count_median","aggregate":"sum"}
          },
      "layer": [{
        "mark": {"type": "circle"}
      }, {
        "mark": {"type": "text", "align": "left", "dx": 4},
        "encoding": {"text": {"field":"WHO Region", "type": "nominal"}}
      }]
    }],
    "config": {"view": {"stroke": null}}
  }
  
